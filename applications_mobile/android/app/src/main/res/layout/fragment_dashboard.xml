<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="maxime.shopcastandroid.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CONNECTED DEVICES"
        android:id="@+id/titledevices"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="25dp"
        style="textstye"
        android:clickable="true"
        android:textStyle="bold"
        android:theme="@style/Base.DialogWindowTitle.AppCompat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No connected devices."
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:textStyle="italic" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DATA USAGE"
        android:id="@+id/textView3"
        android:layout_gravity="left|center_vertical"
        android:textStyle="bold"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp" />
    
    
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:id="@+id/charts"
        android:layout_margin="25dp"></com.github.mikephil.charting.charts.PieChart>

</FrameLayout>
