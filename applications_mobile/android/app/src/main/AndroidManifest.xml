<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maxime.shopcastv3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivty">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlaylistActivity"/>
        <activity android:name=".PlaylistDetailActivity" />
        <activity android:name=".MediaActivity" />
        <activity android:name=".UploadPictures" />
        <activity android:name=".RemoteActivity"/>
        <activity android:name=".ControlActivity" />
        <activity android:name=".DashboardActivity"></activity>
    </application>

</manifest>