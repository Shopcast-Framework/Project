doctype html
html(lang='fr')
	head
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1.0')
		title #{translate.title}
		link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet', type='text/css', media='screen,projection', href='/css/materialize.min.css')
		link(rel='stylesheet', type='text/css', media='screen,projection', href='/css/nouislider.min.css')
		link(rel='stylesheet', href='/css/style.css')
	body
		header(class="light-blue" id="header")
			div.navbar-fixed
				nav(class="menu" role="navigation")
					div(class="nav-wrapper light-blue")
						a(id="logo-container" href="/" class="brand-logo") Logo
						ul(class="right hide-on-med-and-down")
							if isLogged
								for m in menu
									if active == m.url
										li.active
											a(href="#{m.url}")= m.name
												i(class="material-icons left")= m.icon
									else
										li
											a(href="#{m.url}")= m.name
												i(class="material-icons left")= m.icon

								li.user
									a(class="dropdown-button valign-wrapper" href="#!" data-activates="dropdown-user") 
										img(src="#{user.avatar}" class="circle responsive-img avatar")
										span #{user.name}
										i(class="material-icons right valign") arrow_drop_down
							else
								li
									a(href="#")
										i(class="material-icons left") lock
						ul(id="dropdown-user" class="dropdown-content")
							li
								a(href="#!" class="light-blue-text") My account
									i(class="material-icons left") person
							li
								a(href="session/logout" class="red-text") Log out
									i(class="material-icons left") exit_to_app
					div.title #{translate.title}
		section#main
			if isSearchBar
				article.search-wrapper.z-depth-1
					nav(class="white")
						div(class="nav-wrapper container row")
							div(class="input-field col s12")
								input(aria-invalid="false" id="search" placeholder="Search" class="white" type="search")
								label(for="search")
									i(class="material-icons grey-text") search
								i(class="material-icons") close
			article.container
				block content
		div#language-select
			a(class="waves-effect waves-light btn-flat modal-trigger" href="#modal-language" title="change language")
				img(src="public/images/countries/#{language}.png")
		div(id="modal-language" class="modal")
			div(class="modal-content")
				h4 List of available countries
				p
					ul.listing-countries
						each val, index in translate.listing
							li.country
								a(href="?language=#{index}")
									img(src="#{val}")
			div(class="modal-footer")
				a(href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat") Agree
		script(type='text/javascript', src='js/jquery-v2.1.1.min.js')
		script(type='text/javascript', src='js/nouislider.min.js')
		script(type='text/javascript', src='js/materialize.min.js')
		script(type='text/javascript', src='js/init.js')
		block script