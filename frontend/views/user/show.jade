extends ../layout

block content
    header.actions.container
        button(class="amber darken-2 btn btn-large waves-effect waves-light modal-edit" data-target="form-edit") #{translate.btnEdit}
            i.material-icons.left edit
        a(class="red darken-2 btn btn-large waves-effect waves-light" href="/users/delete/#{user.id}") #{translate.btnDelete}
            i.material-icons.left delete
    article.wrapper-content#playlist
        section.container
            form(action='/users/#{user.id}', method='post' id="form-edit" class="row")
                div.input-field.col.s6
                    i(class="material-icons prefix") edit
                    label(for="name") #{translate.username}
                    input(type='text' name='username' id="username" placeholder='#{translate.username}' value='#{user.username}' disabled)
                div.input-field.col.s6
                    i(class="material-icons prefix") edit
                    label(for="name") #{translate.name}
                    input(type='text' name='name' id="name" placeholder='#{translate.name}' value='#{user.name}' disabled)
                div.input-field.col.s6
                    i(class="material-icons prefix") email
                    label(for="name") #{translate.email}
                    input(type='text' name='email' id="email" placeholder='#{translate.email}' value='#{user.email}' disabled)
                div.input-field.col.s6
                    select(name="role")
                        option(value="0") #{translate.administrator}
                        option(value="1") #{translate.client}
                    label(for="name") #{translate.role}
                div.input-field.col.s12.actions.center-align
                    button(type='submit' class="light-green darken-2 btn btn-large waves-effect waves-light") #{translate.btnSave}
                        i.material-icons.left done
                    a(href='/users/#{user.id}' class="red darken-2 btn btn-large waves-effect waves-light modal-edit-cancel") #{translate.btnCancel}
                        i.material-icons.left cancel
